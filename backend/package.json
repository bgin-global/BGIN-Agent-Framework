{
  "name": "@bgin-govhack/backend",
  "version": "1.0.0",
  "description": "BGIN Multi-Agent Research Platform Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:simple": "nodemon src/server-simple.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0 --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "echo 'Database migrations will be handled by Docker'",
    "db:rollback": "echo 'Database rollback will be handled by Docker'",
    "db:seed": "echo 'Database seeding will be handled by Docker'",
    "agents:seed": "echo 'Agent seeding will be handled by Docker'",
    "db:reset": "echo 'Database reset will be handled by Docker'",
    "docker:build": "docker build -t bgin-backend ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "ws": "^8.14.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "axios": "^1.5.0",
    "ioredis": "^5.3.2",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.8.0",
    "@anthropic-ai/sdk": "^0.6.3",
    "@qdrant/js-client-rest": "^1.7.0",
    "uuid": "^9.0.0",
    "nanoid": "^4.0.2",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/pg": "^8.10.2",
    "@types/ws": "^8.5.5",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.2",
    "@types/node-cron": "^3.0.8",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ]
  }
}